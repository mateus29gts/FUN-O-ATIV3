ean resp = false;
    int divisores = 0;
    for (int i =2; i<primo-1; i++){ // variavel i começamndo em 2 pois eu decidir, condição vai até o numero menos 1, t´po 39 se o numero for 40, i++ sempre pra aumentar 1 ate a ondição for falso.
         
    if (primo % i == 0){
        divisores++;
          // parar.
         }
    }
    
    if(divisores>2){
        System.out.println("Ele não é primo");
    }
    else{ 
        resp=true;
    }
       return resp;
      
    }
    
    public static int proxPrimo(int primo){
    boolean prim=prim(primo);
    int proxPrimo = 0;
    while (!prim){
      proxPrimo = primo + 1;
    }
    
    return proxPrimo;

    
    }
    

}
